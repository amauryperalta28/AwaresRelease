@{
    ViewBag.Title = "Create";
}
<div id="page">
        <div id="content">
            <div class="box">

            </div>

            <h2>Create Role</h2>

            @Html.ActionLink("List Roles", "Index") | @Html.ActionLink("Manage User Role", "ManageUserRoles")
            <hr />
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

