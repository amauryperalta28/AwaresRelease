@model IEnumerable<AwareswebApp.Models.Consumo>

@{
    ViewBag.Title = "Consumos";
}

<h2>Consumos</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm())
{
    <p>
        Colaborador: @Html.DropDownList("ColabFilter", "All")
        <input type="submit" value="Filter" />
    </p>
}
 
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UsernameColaborador)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tipoConsumo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.lectura)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fechaCreacion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UsernameColaborador)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tipoConsumo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.lectura)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fechaCreacion)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.idConsumo }) |
            @Html.ActionLink("Details", "Details", new { id=item.idConsumo }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.idConsumo })
        </td>
    </tr>
}

</table>
